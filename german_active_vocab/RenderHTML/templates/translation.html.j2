<body>
    {# {% for dict_dict in lang_dict %} #}
    <!-- {% if dict_dict["lang"] == "de" %}
        {% else %}
        {% endif %} -->
    {# {% if dict_dict["lang"]|length %}
    <h1 style="text-align:center">{{dict_dict["lang"]}}</h1>
    {% endif %} #}
    
    {% set dict_dict = dict_dict["content"]%}

    {% set ns = namespace(is_first_big_section = true) %}

    {% for big_section in dict_dict %}
    {% if not ns.is_first_big_section %}
    <hr>
    {% endif %}
    {% set ns.is_first_big_section = false %}
    {% if mode == "full" %}
    <h1>
        {% set ns = namespace(previous_h1_key="")%}
        {% set ns = namespace(previous_h1_value="")%}
        {% for h1_key,h1_value in big_section.items() %}
        {% if h1_key != 'word_subclass' %}
        <span class={{h1_key}}>{{h1_value|treat_class(h1_key, ns.previous_h1_key, ns.previous_h1_value)|treat_hidden_words(h1_key, dict_dict['hidden_words_list'])}} </span>
        {% endif %}
        {% set ns.previous_h1_key = h1_key %}
        {% set ns.previous_h1_value = h1_value %}
        {% endfor %}
    </h1>
    {% endif %}
    {% for small_section in big_section["word_subclass"] %}
        <h2>
        {% set ns = namespace(previous_h2_key="")%}
        {% set ns = namespace(previous_h2_value="")%}
        {% for h2_key,h2_value in small_section.items() %}
        {% if h2_key != 'def_blocks' %}
        <span class={{h2_key}}>{{h2_value|treat_class(h2_key, ns.previous_h2_key, ns.previous_h2_value)|treat_hidden_words(h2_key, dict_dict['hidden_words_list'])}} </span>
        {% endif %}
        {% set ns.previous_h2_key = h2_key %}
        {% set ns.previous_h2_value = h2_value %}
        {% endfor %}
        </h2>

        {% for def_block in small_section["def_blocks"] %}
        <p>
            {% set ns = namespace(previous_h3_key="")%}
            {% set ns = namespace(previous_h3_value="")%}
            {% set ns = namespace(source_treated=false)%}

            {% for h3_key,h3_value in def_block.items() %}

                {% if h3_key == "source" or h3_key == "target" %}

                    {% if ns.source_treated == false%}
                        <br>
                        <table>
                        {% if h3_value|is_list%}
                            {% for idx in range(h3_value|length)%}
                            <tr>
                                <td width="350">{{def_block["source"][idx]|treat_class(h3_key, ns.previous_h3_key, ns.previous_h3_value)|treat_hidden_words(h3_key, dict_dict['hidden_words_list'])}}</td>
                                <td width="350">{{def_block["target"][idx]|treat_class(h3_key, ns.previous_h3_key, ns.previous_h3_value)|treat_hidden_words(h3_key, dict_dict['hidden_words_list'])}}</td>
                            </tr>
                            {% endfor %}
                        {% else %}
                        <tr>
                            <td width="350">{{def_block["source"]|treat_class(h3_key, ns.previous_h3_key, ns.previous_h3_value)|treat_hidden_words(h3_key, dict_dict['hidden_words_list'])}}</td>
                            <td width="350">{{def_block["target"]|treat_class(h3_key, ns.previous_h3_key, ns.previous_h3_value)|treat_hidden_words(h3_key, dict_dict['hidden_words_list'])}}</td>
                        </tr>
                        {% endif %}
                        </table>
                        {% set ns.source_treated = true %}
                    {% endif %}

                {% elif h3_value|is_list %}

                    {% for h4_value in h3_value %}
                        <span class={{h3_key}}>{{h4_value|treat_class(h3_key, ns.previous_h3_key, ns.previous_h3_value)|treat_hidden_words(h3_key, dict_dict['hidden_words_list'])}} </span>
                    {% endfor %}

                {% else %}

                    <span class={{h3_key}}>{{h3_value|treat_class(h3_key, ns.previous_h3_key, ns.previous_h3_value)|treat_hidden_words(h3_key, dict_dict['hidden_words_list'])}} </span>

                {% endif %}

                {% set ns.previous_h3_key = h3_key %}
                {% set ns.previous_h3_value = h3_value %}

            {% endfor %}
        </p>
        {% endfor %}

    {% endfor %}

    {% endfor %}

    {# {% endfor %} #}

</body>

</html>